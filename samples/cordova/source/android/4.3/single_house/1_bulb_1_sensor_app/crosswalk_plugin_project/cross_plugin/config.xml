<?xml version='1.0' encoding='utf-8'?>
<widget id="com.DineshGuleria.UiMagician" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>UiMagician</name>
    <description>
       Sample App for IoT used in VSCP project ..!!
    </description>
    <author email="din.gulu.er@gmail.com" href="https://sites.google.com/site/uimagician/">
        UiMagician team ..!!
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <icon src="res/icon/icon.png" width="57" height="57" density="mdpi" />

    <feature name="SplashScreen">
       <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
    </feature>

    <platform name="android">
        <allow-intent href="market:*" />

        <!-- you can use any density that exists in the Android project -->
        <splash src="res/drawable-xhdpi/screen.png" density="land-hdpi"/>
        <splash src="res/drawable-xhdpi/screen.png" density="land-ldpi"/>
        <splash src="res/drawable-xhdpi/screen.png" density="land-mdpi"/>
        <splash src="res/drawable-xhdpi/screen.png" density="land-xhdpi"/>
        <splash src="res/drawable-xhdpi/screen.png" density="port-hdpi"/>
        <splash src="res/drawable-xhdpi/screen.png" density="port-ldpi"/>
        <splash src="res/drawable-xhdpi/screen.png" density="port-mdpi"/>
        <splash src="res/drawable-xhdpi/screen.png" density="port-xhdpi"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
